<div class="container pt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="container-fluid text-center" *ngIf="actionResponse!=null">
        <hr>
        <h4> {{action}}</h4>
        <hr>

        <table class="table shadow p-3 mb-5 bg-white rounded">
          <thead>
            <tr>
              <th *ngFor="let header of headers">{{ header }}</th>
            </tr>
          </thead>
          <tr *ngFor="let result of actionResponse.actionResponse.result">
            <td *ngIf="result.devicePlantNumber">{{ result.devicePlantNumber }}</td>
            <td *ngIf="result.deviceSerialNumber">{{ result.deviceSerialNumber }}</td>
            <td>
              <span class="badge status-padding" [ngClass]="{
                'badge-success': result.status === 'Success',
                'badge-danger': result.status === 'Fail'}">
                {{ result.status }}
              </span>
            </td>
            <td><span *ngIf="!result.errorResponse">N/A</span> <span *ngIf="result.errorResponse">[
                {{ result.errorResponse.dateTime }} ] -
                {{result.errorResponse.message}}</span>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>