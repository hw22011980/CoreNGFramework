import { Component, OnInit } from '@angular/core';
import { ActivatedRoute } from '@angular/router';
import { Site } from '../shared/site.model';
import { SiteService } from '../site.service';

@Component({
  selector: 'app-site-navigation',
  templateUrl: './site-navigation.component.html',
  styleUrls: ['./site-navigation.component.css']
})
export class SiteNavigationComponent implements OnInit {
  // deviceListComponentRef: DeviceListComponent;
  sites: Site[];
  site: Site;
  siteId: number;
  disableClick = true;

  constructor(private activatedRoute: ActivatedRoute, private siteService: SiteService) { }

  ngOnInit() {
    this.siteId = this.activatedRoute.snapshot.params['id'];
    this.onGetSite();
  }

  onGetSite(){
    this.siteService.getSiteById(this.siteId).then((site) => {
      this.site = site[0];
    },
    (error: any) => {

    });
  }

  onActivate(componentRef)
  {
    // this.deviceListComponentRef = componentRef;
  }

}
