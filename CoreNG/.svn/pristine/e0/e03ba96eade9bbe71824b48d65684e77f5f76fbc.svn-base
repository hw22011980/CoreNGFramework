.list-group {
    padding: 0;
    margin: 0
    /* overflow: hidden; */
}

.list-group .list-group-item {
    border-radius: 0;
    border-width: 0;
}

.list-group-item .icon {
    margin-right: 5px;
}

.list-group-item {
  padding: 9px 15px
}

.navtree li {
    cursor: pointer;
}

.navsubtree > .navtree {
    padding-left: 30px;
}

.list-group-item-action {
  width: 100%;
  color:#700C0E;
  text-align: inherit;
  font-weight: 500;
  background-color: #E9ECEF;
}

.list-group-item-action:hover, .list-group-item-action:focus {
  z-index: 1;
  color: #700C0E;
  text-decoration: none;
  background-color: white;
}

.list-group-item-action:active {
  color: rgb(0,123,255);
  background-color: #f7f7ed;
}

.list-group-item.active {
  z-index: 2;
  color: rgb(0,123,255);
  background-color: #f7f7ed;
  border-color: #007bff;
}

.list-group-item.disabled, .list-group-item:disabled {
  color: #6c757d;
  pointer-events: none;
  background-color: #E9ECEF;
}

.custom-pad-checkbox
{
  padding-top: 9px;
  margin-left: 14px;
}

input[type=checkbox] {
  margin-right: 8px;

}
.disabled{
  opacity: 0.5;
  pointer-events: none;
  cursor: not-allowed;
}


