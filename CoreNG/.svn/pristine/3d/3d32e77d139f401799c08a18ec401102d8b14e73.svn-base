:host {
    background-color: #363B59;
    position: relative;
    overflow: hidden;
    margin: 0 0 6px;
    padding: 10px 10px 10px 10px;
    width: 450px !important;
    border-radius: 3px 3px 3px 3px;
    color: #FFF;
    pointer-events: all;
    cursor: pointer;
}

.toast-close-button {
    color: #999;
    opacity: 1;
}

.toast-close-button:hover {
    color: #02ceff;
}

.custom-title {
    color: #FFF;
}

.custom-message {
    color: #FFF;
    background: #363B59;
}

.button-yes {
    background: #ED5E68;
    color: white;
    border-radius: 2px 2px 2px 2px;
    padding: 5px;
    margin: 5px;
}
  
.button-no {
    background: #8388A4;
    color: black;
    border-radius: 2px 2px 2px 2px;
    padding: 5px;
    margin: 5px;
}