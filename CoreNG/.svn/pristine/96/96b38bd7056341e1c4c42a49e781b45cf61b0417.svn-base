<!-- this template is to show individual stages, entries on right for the respective stage selected in the tree left side -->
<div class="container" *ngIf="(fields!=null)&&(fields.data!=null)">
  <form (ngSubmit)="onSubmit(formStage)" [formGroup]="formStage"  >
    <div class="card mb-5 rounded w-100" [hidden]="loader.getLoaderStatus()">
      <div class="card-body">
        <div class="row">
          <div class="col-9 t-10"><h3>{{frmConfig.title}}</h3></div>
        </div>
        <div class="row">
          <div class="col t-10 b-10">
            <button *ngIf="this.showEdit && this.hasItems" 
              class="btn btn-primary custom r-5" (click)="btnEdit()" 
              [disabled]="!formStage.valid || !this.editable" [hidden]="!this.editable">Edit</button>
            <button *ngIf="!this.showEdit && this.hasItems" (click)="btnSave()" 
              class="btn btn-success custom r-96" 
              [disabled]="!formStage.valid || this.submitted ">
            <span *ngIf="this.loadbtnShow" id="spinbutton" 
              class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>Save
            </button> 
            <button id="cancel" *ngIf="!this.showEdit && this.hasItems" 
              [disabled]="this.loadbtnShow" (click)="btnCancel()" 
              class="btn btn-mdprimary custom r-5">Cancel
            </button>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col t-10">
            <app-dynamic-inputs  
            [formStage]="formStage"
            [data]="fields.data.items"
            [showEdit]="this.showEdit"
            [loadbtnShow]="this.loadbtnShow">
            </app-dynamic-inputs>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>