<div class="container">

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb w-75">
      <li class="breadcrumb-item"><a class="header" [routerLink]="['/schedules']">Schedules</a></li>
      <li class="breadcrumb-item active" aria-current="page" *ngIf="schedule!=null">{{schedule.scheduleExecutionJobId}}
      </li>
    </ol>
  </nav>

  <div class="card mb-5 bg-white rounded w-75" *ngIf="schedule!=null">
    <div class="card-header">
      SCHEDULE INFORMATION
    </div>

    <div class="card-body">
      <div class="row top-buffer">
        <div class="col-3 text-right">Job Id</div>
        <div class="col-9 text-left"><b>{{schedule.jobId}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right"> Schedule Execution Id</div>
        <div class="col-9 text-left"><b>{{schedule.scheduleExecutionId}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right"> Device Plant Number</div>
        <div class="col-9 text-left"><b>{{schedule.plantNumber}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right"> Schedule Execution Job Id</div>
        <div class="col-9 text-left"><b>{{schedule.scheduleExecutionJobId}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right"> Activation Date</div>
        <div class="col-9 text-left"><b>{{schedule.activationDate}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right"> Expiry Date</div>
        <div class="col-9 text-left"><b>{{schedule.expiryDate}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right"> Time to Live </div>
        <div class="col-9 text-left"><b>{{schedule.timeToLive}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right">Retry Remaining</div>
        <div class="col-9 text-left"> <b>{{schedule.retryRemaining}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right">Job Type</div>
        <div class="col-9 text-left"> <b>{{schedule.jobType}}</b></div>
      </div>
      <div class="row top-buffer">
        <div class="col-3 text-right">Job Status</div>
        <div class="col-9 text-left"><span class="badge status-padding"
            [ngClass]="{
            'badge-light': schedule.jobStatus === 'Queue', 
            'badge-info': schedule.jobStatus === 'Running' || schedule.jobStatus === 'PendingRetry' || schedule.jobStatus === 'PartialComplete',
            'badge-success': schedule.jobStatus === 'Complete',
            'badge-danger': schedule.jobStatus === 'Failed' || schedule.jobStatus === 'Error' || schedule.jobStatus === 'Expired' || schedule.jobStatus === 'SystemCancelled'}">
            {{ schedule.jobStatus }}
          </span></div>
      </div>
    </div>
  </div>

</div>