<br>
<div class="search-body">
  <span *ngIf="isAuthenticated()">
    <div class="row">
      <div class="ml-3">
        <form [formGroup]="searchForm" (ngSubmit)="onSearch()">
          <div class="header">SEARCH</div>
          <select class="custom-select top-buffer" id="search" formControlName="searchFilter">
            <option *ngFor="let searchFilter of getSearchElements() | keyvalue" ngValue="{{searchFilter.value.Name}}">
              {{searchFilter.value.Description}}</option>
          </select>

          <input type="text" class="form-control top-buffer" type="search" formControlName="searchText"
            placeholder="Search...">

          <div formArrayName="filters" *ngFor="let filter of getFilterElements() | keyvalue; let i = index">
            <hr>
            <div class="header">{{filter.value.Description}}</div>
            <select class="custom-select top-buffer" [id]="i" [formControlName]="i">
              <option value="" selected="selected">All {{filter.value.Description}}</option>
              <option *ngFor="let filterOptions of filter.value.OptionValues | keyvalue"
                ngValue="{{filterOptions.value}}">
                {{filterOptions.key}}</option>
            </select>
          </div>
          <br>
          <button type="button" class="btn btn-outline-primary w-100 top-buffer" type="submit">Search</button>
        </form>
      </div>
    </div>
  </span>
</div>