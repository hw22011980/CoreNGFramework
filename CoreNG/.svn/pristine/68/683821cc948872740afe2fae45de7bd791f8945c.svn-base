import { NgModule } from '@angular/core';
import { Routes, RouterModule, PreloadAllModules } from '@angular/router';

import { DashboardComponent } from './core/dashboard/dashboard.component';
import { LoginComponent } from './auth/login/login.component';
import { AuthGuard } from './auth/auth-guard.service';
import { LicenseComponent } from './auth/license/license.component';

const appRoutes: Routes = [
  { path: '', component: DashboardComponent, canActivate: [AuthGuard] },
  { path: 'dashboard', component: DashboardComponent, canActivate: [AuthGuard] },
  { path: 'login', component: LoginComponent },
  { path: 'license', component: LicenseComponent, canActivate: [AuthGuard]},
  { path: 'sites', loadChildren: './sites/sites.module#SitesModule', canActivate: [AuthGuard] },
  { path: 'devices', loadChildren: './devices/devices.module#DevicesModule', canActivate: [AuthGuard] },
  { path: 'keys', loadChildren: './keys/keys.module#KeysModule', canActivate: [AuthGuard] },
  { path: 'firmwares', loadChildren: './firmware/firmware.module#FirmwareModule', canActivate: [AuthGuard] },
  { path: 'schedules', loadChildren: './schedules/schedules.module#SchedulesModule', canActivate: [AuthGuard] },
  { path: 'action-response', loadChildren: './action-response/action-response.module#ActionResponseModule', canActivate: [AuthGuard] }
];

@NgModule({
  imports: [RouterModule.forRoot(appRoutes, { preloadingStrategy: PreloadAllModules, useHash: true,onSameUrlNavigation: 'reload' })],
  exports: [RouterModule]
})
export class AppRoutingModule { }
