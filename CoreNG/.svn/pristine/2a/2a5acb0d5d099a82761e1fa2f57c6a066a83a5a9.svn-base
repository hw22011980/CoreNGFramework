td {
    border: 1px solid #cdd5dc;
    vertical-align: middle;
    position: relative;
    padding: 0.5rem 0.5rem;
    box-sizing: border-box;
}
td.checkbox_column {
    text-align: center;
}
td.expand-column {
    padding: 0.3rem;
}
td.subgrid-column {
    padding: 0 0 0 0;
}
td.column-hide {
    display: none;
}
td.clear-left-border {
    border-left: 0 !important;
}
td.clear-right-border {
    border-right: 0 !important;
}
td table.subgrid-table {
    border-collapse: collapse;
    width: 100%;
}
