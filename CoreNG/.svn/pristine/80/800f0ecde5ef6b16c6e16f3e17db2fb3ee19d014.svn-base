.nav-link {
    font-weight: bold;
    font-size: 14px;
    text-transform: uppercase;
    text-decoration: none;
    color: #171819;
    padding: 10px 0px;
    margin: 0px 10px;
    display: inline-block;
    position: relative;
    opacity: 0.75;
  }
  
  .nav-link:hover {
    opacity: 1;
  }
  
  .nav-link::before {
    transition: 300ms;
    height: 5px;
    content: "";
    position: absolute;
    background-color: #171819;
  }

  .nav-link-grow-up::before {
    height: 0%;
    width: 85%;
    bottom: 0px;
  }
  
  .nav-link-grow-up:hover::before {
    height: 5px;
  }

  .active {
    color: #171819;
  }

  a.disabled {
    pointer-events: none;
    cursor: default;
    color:gray;
 }
