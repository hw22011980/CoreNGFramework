import { CreateField } from '../../shared/device-create.model';
import { DeviceService } from '../../device.service';

let deviceCreateInfoFields: CreateField[];
let deviceCreateInfoField: CreateField;

export class DevicInfoFieldsDefinition {

    public getDeviceInfoFields(deviceService: DeviceService, siteID = 0, enableSite=true): CreateField[] {
        deviceCreateInfoFields = [];

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'SerialNumber';
        deviceCreateInfoField.Description = 'Serial Number';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'Text';
        deviceCreateInfoField.Required = true;
        deviceCreateInfoField.MaxLength = 50;
        deviceCreateInfoField.DefaultValue = '';
        deviceCreateInfoField.AlphaNumeric = false;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'PlantNumber';
        deviceCreateInfoField.Description = 'Plant Number';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'Text';
        deviceCreateInfoField.Required = true;
        deviceCreateInfoField.MaxLength = 50;
        deviceCreateInfoField.DefaultValue = '';
        deviceCreateInfoField.AlphaNumeric = false;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'SystemTitle';
        deviceCreateInfoField.Description = 'System Title';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'Text';
        deviceCreateInfoField.Required = false;
        deviceCreateInfoField.MaxLength = 50;
        deviceCreateInfoField.DefaultValue = '';
        deviceCreateInfoField.AlphaNumeric = true;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'SiteID';
        deviceCreateInfoField.Description = 'Site';
        deviceCreateInfoField.Enable = enableSite;
        deviceCreateInfoField.FieldType = 'DropDown';
        deviceCreateInfoField.DefaultValue = siteID;
        deviceCreateInfoField.OptionValues = deviceService.getSiteDictionary();
        deviceCreateInfoField.Required = true;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'DeviceType';
        deviceCreateInfoField.Description = 'Device Type';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'DropDown';
        deviceCreateInfoField.OptionValues = deviceService.getDeviceTypeDictionary();
        deviceCreateInfoField.DefaultValue = 'Mk10M'; // Mk10M
        deviceCreateInfoField.Required = true;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'DeviceModel';
        deviceCreateInfoField.Description = 'Device Model';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'DropDown';
        deviceCreateInfoField.DefaultValue = 1;
        deviceCreateInfoField.Required = true;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField.Name = 'FirmwareVersion';
        deviceCreateInfoField.Description = 'Firmware Version';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'Text';
        deviceCreateInfoField.Required = false;
        deviceCreateInfoField.MaxLength = 50;
        deviceCreateInfoField.DefaultValue = '';
        deviceCreateInfoField.AlphaNumeric = true;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        deviceCreateInfoField = {};
        deviceCreateInfoField.Name = 'DeviceStatus';
        deviceCreateInfoField.Description = 'Device Status';
        deviceCreateInfoField.Enable = true;
        deviceCreateInfoField.FieldType = 'DropDown';
        deviceCreateInfoField.OptionValues = deviceService.getStatusDictionary();
        deviceCreateInfoField.DefaultValue = 'Installed'; // Installed
        deviceCreateInfoField.Required = true;
        deviceCreateInfoFields.push(deviceCreateInfoField);

        return deviceCreateInfoFields;
    }
}
