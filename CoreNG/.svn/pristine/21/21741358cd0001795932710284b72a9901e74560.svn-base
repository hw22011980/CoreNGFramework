/* You can add global styles to this file, and also import other style files */
table{
    font-size: 80%;
}

thead{
    background-color: #700c0e;
    color: #ffffff
}

.pagination {
    font-size:80%;
}

.badge{
    width:130px;
}

.status-padding{
    padding: 8px;
}

body, html {
    height: 100%;
    font-size:98%;
  }

  
#toast-container > div {
    opacity:1;
}

.btn-mdprimary {
    color: #fff;
    background-color: #700c0e;
    border-color: #700c0e;
  }
  
  .btn-mdprimary:hover {
    color: #fff;
    background-color: #700c0e;
    border-color: #fff;
  }
  
  .btn-mdprimary:focus, .btn-mdprimary.focus {
    box-shadow: 0 0 0 0.2rem rgba(250, 59, 11, 0.5);
  }
  
  .btn-mdoutline-danger {
    color: #700c0e;
    border-color: #700c0e;
  }
  
  
  .btn-mdoutline-danger:focus, .btn-mdoutline-danger.focus {
    box-shadow: 0 0 0 0.2rem rgba(136, 4, 17, 0.5);
  }

  .card-body {
    font-size: 80%;
 }
 
 .card-header{
    letter-spacing: 3px;     
    background-color: #700c0e;
    color: white;
    font-size: 12pt;
 }
 
 .top-buffer{
     margin-top:7px; 
 }

 .form-control:focus {
  border-color: darkgray !important;
  box-shadow: 0 0 5px darkgray !important;
}

.header { 
  color: #700c0e;
  font-weight: bold;
  font-size: 14px;
  text-transform: uppercase;
}

.header:hover {
  color: #584e4e;
}

.margin-left-info{
  margin-left: 13%;
}

.custom-file-input:disabled ~ .custom-file-label {
  background-color: #e9ecef;
}

.btn.btn-primary:disabled{
  border-color: darkgray;
  opacity: 0.5;
  background-color: darkgray;
  color: black;
}


/* Disabeled Input Type styles*/

.btn.btn-dark:disabled {
  opacity: .20;
}

input[type="text"][disabled] {
  background-color: #fcfcfc;
  color:#6b6b6b;
  font-weight: bold;
}

input[type="number"][disabled] {
  background-color: #fcfcfc;
  color:#6b6b6b;
  font-weight: bold;
}

select[disabled] {
  background-color: #fcfcfc;
  font-weight: bold;
}

input[type="text"] {
  background-color: #fcfcfc;
}

input[type="number"] {
  background-color: #fcfcfc;
}

/* Invalid Input Box styles error message*/
input.ng-invalid.ng-dirty:focus {
  border-color: #dc3545 solid!important;
  box-shadow: 0 0 0 0.2rem rgba(148, 86, 92, 0.25) !important;
}

input.ng-invalid.ng-dirty {
  border: #dc3545 1px solid!important;
}

.ng-invalid.ng-dirty+.custom-file-label:focus{
  border-color: #dc3545 !important;
  box-shadow: 0 0 0 0.2rem rgba(148, 86, 92, 0.25) !important;
}

.ng-invalid.ng-dirty+.custom-file-label{
  border: #dc3545 1px solid !important;
  box-shadow: none !important;
}

/* for fields that are required */
.required-field::before {
  content: "* ";
  color: red;
  font-size: 80%;
}

small {
  word-wrap: break-word;
}

.small-error {
  color:#dc3545;
}