import { HttpInterceptor, HttpRequest, HttpHandler } from '@angular/common/http';
import { Injectable, Injector } from '@angular/core';
import { finalize } from 'rxjs/operators';
import { LoaderConnectService } from 'src/app/services/loader-connect-service.component';

@Injectable()
export class LoadingConnectInterceptor implements HttpInterceptor {
    constructor(private injector: Injector) { }

    intercept(req: HttpRequest<any>, next: HttpHandler) {

        if (!req.url.includes("devices")) {
            return next.handle(req);
        }
        const loader = this.injector.get(LoaderConnectService);
        loader.show();
        return next.handle(req).pipe(finalize(() => loader.hide()));
    }
}