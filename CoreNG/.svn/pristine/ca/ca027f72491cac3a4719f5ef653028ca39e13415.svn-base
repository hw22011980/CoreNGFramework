<div class="container-fluid pt-5">
  <!-- <div class="container-fluid margin-right-info pt-5"> -->
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb w-100">
        <li class="breadcrumb-item" id="device-header"><a class="header"           
              [routerLink]="['/devices']" 
              [class.disabled]="!disableClick ? true : null">DEVICES</a></li>
        <li *ngIf="device!=null" class="breadcrumb-item" id="device-header">
              <a  class="header"
              *ngIf= "!setupButtonVisible && this.enableSetup; else useDisAbledID"
              [class.disabled]="!disableClick ? true : null"
              (click)="onRouterLinkClick($event,1)" >{{device.serialNumber}}</a>
              <ng-template #useDisAbledID>
                <a  class="header active custom-color"
                [class.disabled]="!disableClick ? true : null" >{{device.serialNumber}}</a>
              </ng-template>
        </li>
        <li *ngIf="this.enableSetup && !setupButtonVisible && device!=null" [ngClass]="!setupButtonVisible ? 'breadcrumb-item' : 'null'">
              <a class="header" 
                *ngIf= "selectedStage.StageName!=''; else useDisAbledStageName"
                (click)="onRouterLinkClick($event,2)" 
                [class.disabled]="!disableClick ? true : null">SETUP</a>
              <ng-template #useDisAbledStageName>
                <a class="header active custom-color" 
                *ngIf="!setupButtonVisible"
                [class.disabled]="!disableClick ? true : null" >SETUP</a>     
              </ng-template>
        </li>
        <li *ngIf="this.enableSetup && !setupButtonVisible && device!=null" [ngClass]="selectedStage.StageName!='' ? 'breadcrumb-item' : 'null'">
            <a class="header" 
              *ngIf= "selectedStage.SetupName!='' ; else useDisabledStageLink"
              (click)="onRouterLinkClick($event,3)"
              [class.disabled]="!disableClick ? true : null" >{{selectedStage.StageName}}</a>
            <ng-template #useDisabledStageLink>
              <a class="header active custom-color" 
              [class.disabled]="!disableClick ? true : null" >{{selectedStage.StageName}}</a>              
            </ng-template>
        </li>
        <li *ngIf="this.enableSetup && !setupButtonVisible && device!=null"  [ngClass]="selectedStage.SetupName!='' ? 'breadcrumb-item' : 'null'">
            <a class="header active custom-color"
             [class.disabled]="!disableClick ? true : null" >{{selectedStage.SetupName}}</a>
        </li>
        <ul class="navbar-nav ml-auto">
            <div>
              <div class="row">    
                <div *ngIf="this.enableSetup && this.setupButtonVisible">
                  <button class="mr-4 btn btn-outline-primary btn-sm" 
                    type="button" 
                    *ngIf="this.setupButtonVisible; else converToLink"
                    (click)="onRouterLinkClick($event,4); onSetupClick($event) "
                    [disabled]="!disableClick ? true : null">SETUP</button>
                </div>
                <div *ngIf="(this.enableSetup && loader.getLoaderStatus() && !this.setupButtonVisible)" class="col" class="loader"></div> 
                <div *ngIf="this.enableSetup && !this.setupButtonVisible" class="col" id="lblConnect"><Label [style.color]="!disableClick ? 'darkgray' : ((isConnected() ? 'rgb(74, 214, 69)': 'darkgray'))">{{connecLabelStatus}}</Label></div>                
                <div *ngIf="this.enableSetup && !this.setupButtonVisible" class="col">
                  <label class="switch">
                    <input type="checkbox" [disabled]="!disableClick" ng-model="myCheckBox" [checked]="isConnected()" (change)="slideToConnectToMeter($event)" value="angular" >
                    <span class="slider round" [style.background-color]="!disableClick ? 'darkgray' : ((isConnected() ? 'rgb(74, 214, 69)': 'darkgray'))"></span>
                  </label> 
                </div>           
              </div>  
            </div>
        </ul>     
      </ol>
    </nav>
    <router-outlet (activate)="onActivate($event)"></router-outlet>
 </div>